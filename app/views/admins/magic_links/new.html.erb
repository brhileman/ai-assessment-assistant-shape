<%# Admin Login Page %>
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- LaunchPad Lab Logo -->
    <div class="text-center">
      <%= image_tag "Blue-Horizontal-LPL-Logo.svg", 
          alt: "LaunchPad Lab", 
          class: "mx-auto h-12 w-auto" %>
    </div>
    
    <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">
      Admin Login
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      AI Assessment Assistant
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with model: Admin.new, url: admin_magic_links_path, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email, 
                required: true,
                autofocus: true,
                placeholder: "Enter your admin email",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div class="flex items-center">
          <%= form.check_box :remember_me, 
              class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :remember_me, "Remember me", 
              class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div>
          <%= form.submit "Send Magic Link", 
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="text-center">
          <p class="text-xs text-gray-500">
            Passwordless authentication via email<br>
            Only authorized admin emails accepted
          </p>
        </div>
      </div>
    </div>
    
    <!-- Back to Main Site -->
    <div class="mt-6 text-center">
      <%= link_to "← Back to Main Site", root_path, 
          class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
    </div>
  </div>
</div> 